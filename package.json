{
  "name": "inkly",
  "displayName": "!inkly",
  "publisher": "Maazi",
  "description": "An extension that makes transitioning from Solidity to !ink contract easier",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:inkly.convert",
    "onCommand:inkly.build",
    "onCommand:inkly.build-release",
    "onCommand:inkly.initilise-new",
    "onCommand:inkly.test",
    "onCommand:inkly.install-cargo-contract",
    "onCommand:inkly.deploy-aleph-zero"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inkly.convert",
        "title": "Inkly Convert"
      },
      {
        "command": "inkly.build",
        "title": "Inkly build"
      },
      {
        "command": "inkly.install-cargo-contract",
        "title": "Inkly install cargo-contract"
      },
      {
        "command": "inkly.build-release",
        "title": "Inkly build release"
      },
      {
        "command": "inkly.initilise-new",
        "title": "Inkly create project"
      },
      {
        "command": "inkly.deploy",
        "title": "Inkly deploy"
      },
      {
        "command": "inkly.test",
        "title": "Inkly test"
      }
      
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "check-internet-connected": "^2.0.6",
    "clipboardy": "^4.0.0",
    "dotenv": "^16.3.1",
    "formdata": "^0.10.4",
    "fs": "^0.0.1-security"
  }
}
